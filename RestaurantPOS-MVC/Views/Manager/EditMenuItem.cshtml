@model RestaurantPOS_MVC.Models.Item

<h2>Edit Menu Item</h2>

<form asp-action="EditMenuItem" method="post">
    <input type="hidden" asp-for="ItemId">

    <div class="form-group">
        <label for="Name">Item Name</label>
        <input type="text" class="form-control" id="Name" asp-for="Name" required>
    </div>

    <div class="form-group">
        <label for="Category">Category</label>
        <input type="text" class="form-control" id="Category" asp-for="Category" required>
    </div>

    <div class="form-group">
        <label for="SubCategory">Subcategory</label>
        <input type="text" class="form-control" id="SubCategory" asp-for="SubCategory">
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" step="0.01" class="form-control" id="Price" asp-for="Price" required>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="MenuManagement" class="btn btn-secondary">Cancel</a>
</form>
